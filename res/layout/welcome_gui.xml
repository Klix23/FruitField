<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg" >

	<ImageView
    	android:id="@+id/imgLogo"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
    	android:layout_centerHorizontal="true"
    	android:layout_marginTop="11dp"
    	android:gravity="center"
    	android:paddingTop="28dp"
    	android:src="@drawable/logo" />

	<Button
    	android:id="@+id/btnRegeln"
    	style="?android:attr/buttonStyleSmall"
   		android:layout_width="238dp"
    	android:layout_height="wrap_content"
    	android:layout_below="@+id/btnSpielen"
    	android:layout_centerHorizontal="true"
    	android:layout_marginTop="28dp"
    	android:background="@drawable/button"
    	android:minHeight="47dip"
    	android:onClick="btnRegeln"
    	android:text="Regeln"
    	android:textSize="23dp"
    	android:textStyle="bold" />

	<Button
	    android:id="@+id/btnSpielen"
	    android:layout_width="238dp"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/btnRegeln"
	    android:layout_centerVertical="true"
	    android:background="@drawable/button"
	    android:minHeight="47dip"
	    android:onClick="btnSpielen"
	    android:text="Spielen"
	    android:textSize="23dp"
	    android:textStyle="bold" />
	
	<ImageView
   		android:id="@+id/imgGras"
    	android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
    	android:layout_alignParentBottom="true"
    	android:gravity="center"
    	android:background="@drawable/gras" />

	<TextView
	    android:id="@+id/highscore"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginBottom="40dp"
	    android:text="Highscore:"
	    android:textColor="#ffffff"
	    android:textSize="24dp"
	    android:textStyle="bold" />

	<TextView
	    android:id="@+id/werte"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginBottom="12dp"
	    android:text="Zeit: 00:00:00   Klicks: 0"
	    android:textColor="#ffffff"
	    android:textSize="19dp"
	    android:textStyle="bold" />
	
</RelativeLayout>