<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="161dp" >

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingTop="28dp"
                android:src="@drawable/logo"
                tools:ignore="RtlHardcoded,RtlSymmetry,ContentDescription" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:paddingLeft="42dp"
            android:paddingTop="55dp"
            tools:ignore="RtlHardcoded,RtlSymmetry" >

            <Button
                android:id="@+id/btnSpielen"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:minHeight="47dip"
                android:text="Spielen"
                android:textSize="23sp"
                android:textStyle="bold"
                android:onClick="btnSpielen"
                tools:ignore="HardcodedText" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="63dp"
            android:paddingLeft="42dp"
            android:paddingTop="15dp"
            tools:ignore="RtlHardcoded,RtlSymmetry" >

            <Button
                android:id="@+id/btnRegeln"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:minHeight="47dip"
                android:text="Regeln"
                android:textSize="23sp"
                android:textStyle="bold"
                android:onClick="btnRegeln"
                tools:ignore="HardcodedText" />

        </FrameLayout>

        <ImageView
            android:id="@+id/imgGras"
            android:layout_width="369dp"
            android:layout_height="234dp"
            android:src="@drawable/gras"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</LinearLayout>